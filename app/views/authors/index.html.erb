<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td><%= link_to 'Show', author %></td>
        <% if current_author.id == author.id %>
          <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>